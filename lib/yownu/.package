(package yownu
  
  (title "Yownu")
  (description "Your Own Universe")
  (authors "Guillaume Cartier" "Edouard Hebert")
  (stage alpha)
  (root "src")
  (products (yownu (title "Yownu")
                   (run yownu.run)
                   (product yownu.product)
                   (build (yownu executable: "Yownu" minimum-heap: 500000 bundle: "yownu" resources: "resources/yownu"))
                   (update yownu
                           yownu.biome
                           yownu.client
                           yownu.debugger
                           yownu.product
                           yownu.run
                           yownu.run-server
                           yownu.server
                           yownu.start
                           yownu.start-server
                           yownu.window
                           yownu.windows
                           yownu.world
                           yownu.zone)
                   (dependencies gambit.walk
                                 jazz.doc
                                 jazz.editor.jazz
                                 jazz.fonts
                                 jazz.git
                                 jiri
                                 world
                                 world.client
                                 world.server))
            (yownu-server (title "Yownu-Server")
                          (run yownu.run-server)
                          (product yownu.product-server)
                          (build (yownu-server executable: "Yownu-Server" minimum-heap: 1000000 bundle: "yownu-server" resources: "resources/yownu-server"))
                          (dependencies world.server))
            (yownu-worker (title "Yownu-Worker")
                          (run yownu.run-worker)
                          (product yownu.product-worker)
                          (build (yownu-worker executable: "Yownu-Worker" bundle: "yownu-worker" resources: "resources/yownu-worker" include-compiler?: #t))
                          (update yownu.product-worker
                                  yownu.run-worker
                                  yownu.worker
                                  yownu.worker-settings)
                          (dependencies world.worker))
            (yownu-all (dependencies yownu
                                     yownu-server
                                     yownu-worker))
            (yownu-script (run yownu.script)))
  (project ".project"))
