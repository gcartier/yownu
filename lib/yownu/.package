(package yownu
  
  (title "Yownu")
  (description "Your Own Universe")
  (authors "Guillaume Cartier" "Edouard Hebert")
  (stage alpha)
  (root "src")
  (products (yownu (title "Yownu")
                   (prefix "Client")
                   (run yownu.run)
                   (product yownu.product)
                   (build (yownu executable: "Yownu" minimum-heap: 500000 bundle: "yownu" resources: "resources/yownu"))
                   (update yownu
                           yownu.application
                           yownu.biome
                           yownu.boot
                           yownu.boot-processor
                           yownu.boot-server
                           yownu.boot-worker
                           yownu.debugger
                           yownu.devel
                           yownu.process
                           yownu.processor
                           yownu.product
                           yownu.product-processor
                           yownu.product-server
                           yownu.run
                           yownu.run-processor
                           yownu.run-server
                           yownu.settings
                           yownu.window
                           yownu.windows
                           yownu.zone)
                   (dependencies gambit.walk
                                 jazz.editor.jazz
                                 jazz.fonts
                                 jazz.git
                                 (cond
                                   ((or mac windows) jiri))
                                 jazz.platform
                                 world
                                 world.client
                                 world.server))
            (yownu-server (title "Yownu-Server")
                          (prefix "Server")
                          (run yownu.run-server)
                          (product yownu.product-server)
                          (build (yownu-server executable: "Yownu-Server" minimum-heap: 500000 bundle: "yownu-server" resources: "resources/yownu-server"))
                          (dependencies world.server))
            (yownu-processor (title "Yownu-Processor")
                             (prefix "Processor")
                             (run yownu.run-processor)
                             (product yownu.product-processor)
                             (build (yownu-processor executable: "Yownu-Processor" minimum-heap: 500000 bundle: "yownu-processor" resources: "resources/yownu-processor"))
                             (dependencies world.processor))
            (yownu-worker (title "Yownu-Worker")
                          (prefix "Worker")
                          (run yownu.run-worker)
                          (product yownu.product-worker)
                          (build (yownu-worker executable: "Yownu-Worker" bundle: "yownu-worker" resources: "resources/yownu-worker" include-compiler?: #t))
                          (update yownu.product-worker
                                  yownu.run-worker
                                  yownu.worker-application
                                  yownu.worker-process
                                  yownu.worker-settings)
                          (dependencies world.worker))
            (yownu-world (product yownu.product-world))
            (yownu-all (dependencies yownu
                                     yownu-server
                                     yownu-processor
                                     yownu-worker))
            (yownu-script (run yownu.script)))
  (project ".project"))
