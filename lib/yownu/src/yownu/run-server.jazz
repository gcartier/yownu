(module yownu.run-server jazz


(import (jazz.io)
        (world))


(definition yownu-start
  #f)

(definition public (set-yownu-start start)
  (set! yownu-start start))


(definition protected (prepare-server)
  (define (setup-aliases)
    (register-alias 'App
                    (list (cond ((is-alias? 'Yownu)
                                 'Yownu)
                                ((is-alias? 'Bundle)
                                 'Bundle)
                                (else
                                 'Build))))
    (register-resources-alias 'Yownu-Server 'yownu-server))
  
  (set-process-kind 'process)
  (set-settings-root {Directory Home ".yownu-server"})
  (set-settings-alias 'Resources)
  (set-aliases-setup setup-aliases)
  (set-valid-roles '(admin))
  (set-worker-filename (cond-expand (mac "yownu-worker.app/Contents/MacOS/Yownu-Worker")
                                    (else "Yownu-Worker"))))


(definition (run descriptor)
  (prepare-server)
  (load-unit 'world.settings)
  (load-unit 'world.work)
  (load-unit 'yownu.start-server)
  (yownu-start))


(register-product-run 'yownu-server
  run))
