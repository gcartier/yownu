JAZZ=cache/release/jazz

case "$1" in
	"-d" )
		DEBUGGER="-debugger :51000"
         shift
		;;

	"-debug" )
		DEBUGGER="-debugger :51000"
         JAZZ=cache/debug/jazz
         shift
		;;

	* )
		DEBUGGER=""
		;;
esac

declare -i COUNT

if [ -z "$1" ]; then
  COUNT=5
else
  COUNT=$1
fi

for ((i=1; i<=$COUNT; i+=1)); do
     $JAZZ $DEBUGGER -r yownu -process-title "Bot$i" -client "Bot$i" -bot true -window false -local true &
done
